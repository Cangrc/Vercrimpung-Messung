'SET FIR GAIN

Dim lValue As Long: lValue = 2
EVHDCCTLSetParameterLongByName(0, "/GeniCam/Camera/GenICam/CameraControl/FIRControl/FIRGain", lValue)

'AOI TRACKING

Dim lValue As Long: lValue = 1
EVHDCCTLSetParameterLongByName(0, "/GeniCam/Camera/GenICam/CameraControl/ModeAndAlgorithmControl/AoiTracking/AoiTrackingEnable", lValue)

'AOI MIN NUMBER OF VERTICAL PIXELS

Dim lValue As Long: lValue = 20
EVHDCCTLSetParameterLongByName(0, "/GeniCam/Camera/GenICam/CameraControl/ModeAndAlgorithmControl/AoiTracking/AoiTrackingMinNumPixel", lValue)

'AOI SEARCH

Dim lValue As Long: lValue = 1
EVHDCCTLSetParameterLongByName(0, "/GeniCam/Camera/GenICam/CameraControl/ModeAndAlgorithmControl/AoiSearch/AoiSearchEnable", lValue)

'AOI SEARCH HEIGHT (look on whole chip or smaller area)

Dim lValue As Long: lValue = 3000
EVHDCCTLSetParameterLongByName(0, "/GeniCam/Camera/GenICam/CameraControl/ModeAndAlgorithmControl/AoiSearch/AoiSearchHeight", lValue)

'AOI SEARCH OFFSET (looking starting from certain height)
'It is better to put some offset because it is easy to deceive algorithm

Dim lValue As Long: lValue = 10
EVHDCCTLSetParameterLongByName(0, "/GeniCam/Camera/GenICam/CameraControl/ModeAndAlgorithmControl/AoiSearch/AoiSearchOffsetY", lValue)

